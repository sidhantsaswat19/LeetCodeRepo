class Solution {
    public int[] leftRightDifference(int[] nums) {
        int leftSum=0;
        int rightSum=0;
        int total=0;
        int[] diff = new int[nums.length];
        for(int n:nums){
            total+=n;
        }
        for(int i=0;i<nums.length;i++){
            rightSum = total-leftSum-nums[i];
            if(rightSum>leftSum){
                diff[i]=rightSum-leftSum;
            }else{
                diff[i]=leftSum-rightSum;
            }
            leftSum+=nums[i];
        }
        return diff;
    }
}
