class Solution {
    public int minimumOperations(int[] nums) {
        int minOper = 0;
        for(int num:nums){
            while (num%3!=0){
                if(num%3==2){
                    minOper++;
                    num +=1;
                }else if(num%3==1){
                    minOper++;
                    num -=1;
                }
            }
      }
        return minOper;
    }
}
