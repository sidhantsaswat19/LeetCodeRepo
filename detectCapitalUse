class Solution {
    public boolean detectCapitalUse(String word) {
        boolean allCapital = true,allLower = true,firstLetter = true;
        for(int i=0;i<word.length();i++){
            if(!Character.isUpperCase(word.charAt(i)))
                allCapital = false;
            if(!Character.isLowerCase(word.charAt(i))){
                allLower =  false;
                if(i>0)
                    firstLetter = false;
            }
        }
        return allCapital || allLower || firstLetter;
    }
}
