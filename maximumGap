class Solution {
    public int maximumGap(int[] nums) {
        int n = nums.length;
        int[] gap = new int[n-1];
        Arrays.sort(nums);
        int maxGap = 0;
        if(n<2){
            return 0;
        }else{
            for(int i=0;i<n-1;i++){
                gap[i]=nums[i+1]-nums[i];
                if(gap[i]>maxGap){
                    maxGap = gap[i];
                }
            }
            return maxGap;
        }
    }
}
