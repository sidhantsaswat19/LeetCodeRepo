class Solution {
    public int maximizeSum(int[] nums, int k) {
        int max =0;
        int maxSum = 0;
        for(int i=0;i<nums.length;i++){
            if(nums[i]>max)
                max = nums[i];
        }
        while(k>0){
            maxSum+=max;
            max++;
            k--;
        }
        return maxSum;
    }
}
